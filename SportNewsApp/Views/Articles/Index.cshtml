@model ArticleViewModel
@{ 
    ViewData["Title"] = Model.Title;
}
<h2>@Model.Title</h2>
<div class="img-container" style="text-align:center;">
    <img src="@Model.ImageUrl" alt="@Model.Title" />
</div>

<div class="row mb-2">
    <div class="col-md-6">Author: @Model.AuthorName Category: @Model.CategoryName</div>
    <div class="col-md-2"></div>
    <div class="col-md-4">Created On: @Model.CreatedOn</div>
</div>
<p>@Model.Content</p>